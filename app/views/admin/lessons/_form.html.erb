<div class="col-md-offset-3">
  <%= form_for [:admin, @lesson] do |f| %>
      <div class="row col-md-6">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :course %>
          <%= f.select(:course_id, options_for_select(Course.all.map {|c| [c.name, c.id]},), class: 'form-control') %>
        </div>

        <div class="form-group">
          <%= f.label :document_url %>
          <%= f.text_field :document_url, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :video_url %>
          <%= f.text_field :video_url, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Create', class: 'btn btn-primary pull-right' %>
        </div>
      </div>

  <% end %>
</div>
